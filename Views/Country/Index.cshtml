<!DOCTYPE html>
<html lang="en">
<head>
    <title>Country Index</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5a5b6880b0.js" crossorigin="anonymous"></script>
</head>
<body class="bg-background text-textcolor dark:bg-darkbackground dark:text-darktextcolor">

    <div class="mx-custom p-4">
        <table class="min-w-full bg-white dark:bg-gray-700 border border-accent dark:border-darkaccent rounded-md overflow-hidden">
            <thead class="bg-accent dark:bg-darkaccent text-white">
                <tr>
                    <th class="py-2 px-4">#</th>
                    <th class="py-2 px-4">Name</th>
                    <th class="py-2 px-4">Language</th>
                    <th class="py-2 px-4">Action 1</th>
                    <th class="py-2 px-4">Action 2</th>
                    <th class="py-2 px-4">Action 3</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Model)
                {
                    <tr class="hover:bg-gray-100 dark:hover:bg-gray-600">
                        <td class="py-2 px-4">@country.countryId</td>
                        <td class="py-2 px-4">@country.countryName</td>
                        <td class="py-2 px-4">@country.language</td>
                        <td class="py-2 px-4">
                            <a href="@Url.Action("Index", "City", new { ID_Country = country.countryId })" class="text-blue-500 dark:text-blue-300 flex items-center">
                                <i class="fas fa-pen-to-square mr-1"></i>
                                View City
                            </a>
                        </td>
                        <td class="py-2 px-4">
                            <a asp-controller="City" asp-action="AddCity" asp-route-ID_Country="@country.countryId" class="text-blue-500 dark:text-blue-300 flex items-center">
                                <i class="fas fa-pen-to-square mr-1"></i>
                                Add City
                            </a>
                        </td>
                        <td class="py-2 px-4">
                            <a href="@Url.Action("ViewCountry", "Country", new { ID_Country = country.countryId })" class="text-blue-500 dark:text-blue-300 flex items-center">
                                <i class="fas fa-pen-to-square mr-1"></i>
                                View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
