@{
    Layout = "~/Views/Shared/_LayoutJobSeeker.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Country Index</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/5a5b6880b0.js" crossorigin="anonymous"></script>
</head>
<body class="bg-background text-textcolor dark:bg-darkbackground dark:text-darktextcolor">

    <div class="mx-custom p-4">
        <button data-modal-target="crud-modal" data-modal-toggle="crud-modal" class="transition ease-in-out delay-150 hover:translate-y-1 hover:scale-105 duration-200
                                                                                    block mx-5 text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300
                                                                                    dark:focus:ring-purple-800 shadow-lg shadow-purple-500/50 dark:shadow-lg dark:shadow-purple-800/80 font-medium font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
            <i class="fa-solid fa-plus mr-2"></i>Create Country
        </button>

        <div class="relative overflow-x-auto rounded-t-lg mt-5 mx-5
                    border-2 border-purple-500 shadow-lg shadow-purple-500/50 hover:shadow-xl hover:shadow-purple-500/50 dark:hover:shadow-xl dark:shadow-purple-800/80 dark:hover:shadow-purple-800/80
                    dark:border-2 dark:border-purple-800">
            <table class="w-full text-sm text-left rtl:text-right text-textcolor dark:text-darktextcolor">
                <thead class="text-xs text-white dark:text-darktextcolor uppercase bg-purple-500 dark:bg-purple-800">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            #ID
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Name
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Language
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Action 1
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Action 2
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Action 3
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var country in Model)
                    {
                        <tr class="hover:bg-gray-100 dark:hover:bg-gray-600">
                            <td class="py-2 px-4">@country.countryId</td>
                            <td class="py-2 px-4">@country.countryName</td>
                            <td class="py-2 px-4">@country.language</td>
                            <td class="py-2 px-4">
                                <a href="@Url.Action("Index", "City", new { ID_Country = country.countryId })" class="text-blue-500 dark:text-blue-300 flex items-center">
                                    <i class="fas fa-pen-to-square mr-1"></i>
                                    View City
                                </a>
                            </td>
                            <td class="py-2 px-4">
                                <a asp-controller="City" asp-action="AddCity" asp-route-ID_Country="@country.countryId" class="text-blue-500 dark:text-blue-300 flex items-center">
                                    <i class="fas fa-pen-to-square mr-1"></i>
                                    Add City
                                </a>
                            </td>
                            <td class="py-2 px-4">
                                <a href="@Url.Action("ViewCountry", "Country", new { ID_Country = country.countryId })" class="text-blue-500 dark:text-blue-300 flex items-center">
                                    <i class="fas fa-pen-to-square mr-1"></i>
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
