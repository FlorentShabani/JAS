@model List<JAS.Models.Domain.City>

@{
    ViewData["Title"] = "Cities";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-background text-textcolor dark:bg-darkbackground dark:text-darktextcolor">

<div class="mx-custom p-4">

    <div class="relative overflow-x-auto rounded-t-lg mt-5 mx-5
                border-2 border-accent dark:border-darkaccent shadow-lg shadow-accent/50 hover:shadow-xl hover:shadow-accent/50 dark:hover:shadow-xl dark:shadow-darkaccent/80 dark:hover:shadow-darkaccent/80">
        <table class="w-full text-sm text-left rtl:text-right text-textcolor dark:text-darktextcolor">
            <thead class="text-xs text-white dark:text-darktextcolor uppercase bg-accent dark:bg-darkaccent">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Country ID
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Name
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var city in Model)
                {
                    <tr class="hover:bg-gray-100 dark:hover:bg-gray-600">
                        <td class="py-2 px-4">@city.cityId</td>
                        <td class="py-2 px-4">
                            @city.cityName
                        </td>
                        <td class="py-2 px-4">
                            <a href="@Url.Action("ViewCity", "City", new { ID_City = city.cityId })" class="text-blue-500 dark:text-blue-300 flex items-center">
                                <i class="fas fa-pen-to-square mr-1"></i>
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

</body>
</html>
