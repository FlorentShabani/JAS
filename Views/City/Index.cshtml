@model List<JAS.Models.Domain.City>

@{
    ViewData["Title"] = "Cities";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-background text-textcolor dark:bg-darkbackground dark:text-darktextcolor">

    <div class="mx-custom">
        <table class="min-w-full bg-white dark:bg-gray-700 border border-accent dark:border-darkaccent rounded-md overflow-hidden">
            <thead class="bg-accent dark:bg-darkaccent text-white">
                <tr>
                    <th class="py-2">#</th>
                    <th class="py-2">Name</th>
                    <th class="py-2">Country #ID</th>
                    <th class="py-2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var city in Model)
                {
                    <tr class="hover:bg-gray-100 dark:hover:bg-gray-600">
                        <td class="py-2" scope="row">@city.cityId</td>
                        <td class="py-2">
                            @city.cityName
                            <br />
                            @city.countryId
                        </td>
                        <td class="py-2">
                            <a href="@Url.Action("ViewCity", "City", new { ID_City = city.cityId })" class="text-blue-500 dark:text-blue-300">
                                <i class="fas fa-pen-to-square" style="margin-right: 3px;"></i>View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
