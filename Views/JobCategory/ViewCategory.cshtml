@using Microsoft.AspNetCore.Identity
@using JAS.Models.Domain
@model JobCategory;
@{
    ViewData["Title"] = "View Categorz";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";

}

<div class="flex items-center justify-center h-screen">
    <div class="mx-auto my-auto p-4 w-full max-w-2xl h-screen md:h-auto">
        <div class="p-4 bg-white rounded-lg shadow dark:bg-gray-800 border-2 border-purple-500 dark:border-purple-800 sm:p-5">
            <div class="justify-center items-center pb-4 mb-4 rounded-t border-b sm:mb-5 dark:border-gray-600">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white text-center">
                    Update Status
                </h3>
            </div>

            <form asp-action="ViewCategoryOnPost">
                <div class="grid gap-4 mb-4 sm:grid-cols-2">
                    <div class="col-span-2 hidden">
                        <label asp-for="categoryId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name</label>
                        <input asp-for="categoryId" type="text" readonly class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type category name" required="">
                    </div>
                    <div class="col-span-2">
                        <label asp-for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name</label>
                        <input asp-for="name" type="text" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type category name" required="">
                    </div>

                    <div class="col-span-2">
                        <label asp-for="description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Category description</label>
                        <textarea asp-for="description" required id="description" maxlength="1500" rows="5" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Write a category description..."></textarea>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <button type="submit" class="w-1/2 transition ease-in-out delay-150 hover:translate-y-1 hover:scale-105 duration-200
                            bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300
                            dark:focus:ring-purple-800 shadow-lg shadow-purple-500/50 dark:shadow-lg dark:shadow-purple-800/80
                            font-medium rounded-lg text-sm px-5 py-2.5 text-center text-white dark:text-darktextcolor">
                        <i class="fa-solid fa-arrows-rotate mr-2"></i>Update category
                    </button>
                    <button type="submit" class="w-1/2 transition ease-in-out delay-150 hover:translate-y-1 hover:scale-105 duration-200
                            bg-gradient-to-r from-red-500 via-red-600 to-red-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300
                            dark:focus:ring-red-800 shadow-lg shadow-red-500/50 dark:shadow-lg dark:shadow-red-800/80
                            font-medium rounded-lg text-sm px-5 py-2.5 text-center text-white dark:text-darktextcolor" formaction="@Url.Action("DeleteCategory", "JobCategory")">
                        <i class="fa-solid fa-trash mr-2"></i>Delete category
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>