@model JAS.Models.Domain.JobListing
@using JAS.Models.Domain

@{
    ViewData["Title"] = "Create Job";
}

<!DOCTYPE html>
<html lang="en">

<body class="bg-background text-textcolor dark:bg-darkbackground dark:text-darktextcolor">
    <div class="container mx-auto p-4 flex flex-col items-center">
        <h2 class="text-2xl font-semibold mb-4 dark:text-white">Create Job</h2>

        <form class="bg-gray-200 dark:bg-gray-700 p-6 rounded" method="post" action="@Url.Action("JobCreation", "JobListing")">
            <!-- Use the appropriate action and controller names in the action attribute -->

            <div class="mb-4">
                <label for="title" class="block font-medium dark:text-white mb-2">Job Title:</label>
                <input type="text" id="title" name="title" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500 text-black" required />
            </div>

            <!-- Display the current user's name instead of the companyId input field 
            <div class="mb-4">
                <label class="block font-medium dark:text-white mb-2">Company:</label>
                <div class="border px-4 py-2 rounded focus:outline-none focus:border-blue-500 text-black">
                    @User.Identity.Name
                </div>
            </div> -->

           <div class="mb-4">
                <label for="categoryId" class="block font-medium dark:text-white mb-2">Category:</label>
                <select id="categoryId" name="categoryId" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500 text-black" required>
            @foreach (var category in ViewData["Categories"] as List<JobCategory>)
            {
                <option value="@category.categoryId">@category.name</option>
            }
                </select>
            </div>


            <div class="flex justify-center items-center mt-2">
                <button type="submit" class="bg-primary text-white px-4 py-2 rounded hover:bg-blue-700 dark:bg-darkprimary dark:hover:bg-darkaccent dark:focus:ring-darkaccent mt-2">Create Job</button>
            </div>
        </form>
    </div>
</body>

</html>
