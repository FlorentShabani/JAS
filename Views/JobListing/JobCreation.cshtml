@{
    ViewData["Title"] = "Create Job";
}

<!DOCTYPE html>
<html lang="en">
<body class="bg-background text-textcolor dark:bg-darkbackground dark:text-darktextcolor">
    <div class="container mx-auto p-4 flex flex-col items-center">
        <h2 class="text-2xl font-semibold mb-4 dark:text-white">Create Job</h2>
    <form class="bg-gray-200 dark:bg-gray-700 p-6 rounded">
            <div class="mb-4">
                <label for="jobTitle" class="block font-medium dark:text-white mb-2">Job Title:</label>
                <input type="text" id="jobTitle" name="jobTitle" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500 text-black" required />
            </div>
            <div class="mb-4">
                <label for="jobDescription" class="block font-medium dark:text-white mb-2">Job Description:</label>
                <textarea id="jobDescription" name="jobDescription" rows="4" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500 text-black" required></textarea>
            </div>
            <div class="mb-4">
                <label for="requirements" class="block font-medium dark:text-white mb-2">Requirements:</label>
                <textarea id="requirements" name="requirements" rows="4" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500 text-black" required></textarea>
            </div>
            <div class="flex justify-center items-center mt-2">
                <button type="submit" class="bg-primary text-white px-4 py-2 rounded hover:bg-blue-700 dark:bg-darkprimary dark:hover:bg-darkaccent dark:focus:ring-darkaccent mt-2">Create Job</button>
            </div>
        </form>
    </div>
</body>
</html>
