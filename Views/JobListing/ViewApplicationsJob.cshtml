@using Microsoft.AspNetCore.Identity
@model List<JAS.Models.Domain.Application>;
@{
    ViewData["Title"] = "View Job Listings";
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}


<div class="relative overflow-x-auto rounded-t-lg mt-5 mx-5
            border-2 border-purple-500 shadow-lg shadow-purple-500/50 hover:shadow-xl hover:shadow-purple-500/50 dark:hover:shadow-xl dark:shadow-purple-800/80 dark:hover:shadow-purple-800/80
            dark:border-2 dark:border-purple-800">
    <table class="w-full text-sm text-left rtl:text-right text-textcolor dark:text-darktextcolor">
        <thead class="text-xs text-white dark:text-darktextcolor uppercase bg-purple-500 dark:bg-purple-800">
            <tr>
                <th scope="col" class="px-6 py-3">
                    #ID
                </th>
                <th scope="col" class="px-6 py-3">
                    Status
                </th>
                <th scope="col" class="px-6 py-3">
                    First name
                </th>
                <th scope="col" class="px-6 py-3">
                    Last name
                </th>
                <th scope="col" class="px-6 py-3">
                    Phone number
                </th>
                <th scope="col" class="px-6 py-3">
                    Email
                </th>
                <th scope="col" class="px-6 py-3">
                    CoverLetter
                </th>
                <th scope="col" class="px-6 py-3">
                    Download CV
                </th>
                <th scope="col" class="px-6 py-3">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jobListing in Model)
            {
                <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 odd:hover:bg-gray-100 even:hover:bg-gray-200 border-b dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        @jobListing.applicationId
                    </th>
                    <td class="px-6 py-4">
                        @jobListing.Status.statusName
                    </td>
                    <td class="px-6 py-4">
                        @jobListing.JobSeeker.User.firstName
                    </td>
                    <td class="px-6 py-4">
                        @jobListing.JobSeeker.User.lastName
                    </td>
                    <td class="px-6 py-4">
                        @jobListing.JobSeeker.User.PhoneNumber
                    </td>
                    <td class="px-6 py-4">
                        @jobListing.JobSeeker.User.Email
                    </td>
                    <td class="px-6 py-4">
                        <form asp-action="DownloadCoverLetter" method="get">

                            <input type="hidden" name="coverLetterId" value="@jobListing.CoverLetter.coverLetterId" />

                            <button type="submit" class="transition ease-in-out delay-150 hover:translate-y-1 hover:scale-105 duration-200
                            block mx-5 text-white bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 shadow-lg shadow-green-500/50 dark:shadow-lg dark:shadow-green-800/80 font-medium font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                <i class="fa-solid fa-download mr-2"></i>CoverLetter
                            </button>
                        </form>
                    </td>
                    <td class="px-6 py-4">
                        <form asp-action="DownloadCV" method="get">

                            <input type="hidden" name="cvId" value="@jobListing.CV.cvId" />

                            <button type="submit" class="transition ease-in-out delay-150 hover:translate-y-1 hover:scale-105 duration-200
                            block mx-5 text-white bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 shadow-lg shadow-green-500/50 dark:shadow-lg dark:shadow-green-800/80 font-medium font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                <i class="fa-solid fa-download mr-2"></i>CV
                            </button>
                        </form>

                    </td>
                    <td class="px-6 py-4">

                        <a href="@Url.Action("ViewUserCV", "JobListing", new { cvId = jobListing.CV.cvId, applicationId = jobListing.applicationId })" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                            <i class="fa-solid fa-eye mr-1"></i> View CV
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>