@using Microsoft.AspNetCore.Identity
@model List<JAS.Models.Domain.CompositeModel.JobListingComposite>;
@{
    ViewData["Title"] = "View Job Listings";
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}


<button class="transition ease-in-out delay-150 hover:translate-y-1 hover:scale-105 duration-200
                                                                                block mx-5 text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 shadow-lg shadow-purple-500/50 dark:shadow-lg dark:shadow-purple-800/80 font-medium font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
    <a asp-action="Create" asp-controller="JobListing">
        <i class="fa-solid fa-plus mr-2"></i>Create Job Listing
    </a>
</button>

<div class="relative overflow-x-auto rounded-t-lg mt-5 mx-5
            border-2 border-purple-500 shadow-lg shadow-purple-500/50 hover:shadow-xl hover:shadow-purple-500/50 dark:hover:shadow-xl dark:shadow-purple-800/80 dark:hover:shadow-purple-800/80
            dark:border-2 dark:border-purple-800">
    <table class="w-full text-sm text-left rtl:text-right text-textcolor dark:text-darktextcolor">
        <thead class="text-xs text-white dark:text-darktextcolor uppercase bg-purple-500 dark:bg-purple-800">
            <tr>
                <th scope="col" class="px-6 py-3">
                    #ID
                </th>
                <th scope="col" class="px-6 py-3">
                    Name
                </th>
                <th scope="col" class="px-6 py-3">
                    Yearly Salary
                </th>
                <th scope="col" class="px-6 py-3">
                    Number of applications
                </th>
                <th scope="col" class="px-6 py-3">
                    Action 1
                </th>
                <th scope="col" class="px-6 py-3">
                    Action 2
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jobListing in Model)
            {
                <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 odd:hover:bg-gray-100 even:hover:bg-gray-200 border-b dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        @jobListing.JobListing.positionId
                    </th>
                    <td class="px-6 py-4">
                        @jobListing.JobListing.title
                    </td>
                    <td class="px-6 py-4">
                        @jobListing.JobListing.salary €
                    </td>
                    <td class="px-6 py-4">
                        <span class="bg-green-100 text-green-800 text-sm font-bold me-2 px-2.5 py-0.5 rounded border border-purple-500 dark:border-purple-800 dark:bg-green-900 dark:text-green-300">@jobListing.ApplicationCount</span>
                        Applicants
                    </td>
                    <td class="px-6 py-4">
                        <a href="@Url.Action("ViewApplicationsJob", "JobListing", new { positionId = jobListing.JobListing.positionId })" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                            <i class="fa-solid fa-eye mr-1"></i> View Applicants
                        </a>
                    </td>
                    <td class="px-6 py-4">
                        <a href="@Url.Action("View", "JobListing", new { positionId = jobListing.JobListing.positionId })" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">
                            <i class="fa-solid fa-pen-to-square mr-1"></i> Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>