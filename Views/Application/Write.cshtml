@using Microsoft.AspNetCore.Identity
@using JAS.Models.Domain.CompositeModel
@using JAS.Models.Domain
@model ApplicationComposite;
@{
    ViewData["Title"] = "Write an application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex justify-center items-center h-screen">
    <div class="mx-auto my-auto p-4 w-full max-w-2xl h-screen lg:h-auto">
        <!-- Modal content -->
        <div class="bg-white rounded-lg shadow dark:bg-gray-700 border-2 border-purple-500 dark:border-purple-800">
            <!-- Modal header -->
            <div class="items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                <h3 class="justify-center items-center text-lg text-center font-semibold text-gray-900 dark:text-white">
                    Write an application
                </h3>
            </div>
            <div class="flex items-center justify-between p-4 md:px-5 md:py-2 rounded-t dark:border-gray-600">
                <h3 class="justify-center items-center text-lg text-center font-semibold text-gray-900 dark:text-white">
                    Position applying for
                </h3>
            </div>
            <!-- Modal body -->
            <form asp-action="SendApplication" class="p-4 md:p-5" enctype="multipart/form-data">
                <div class="grid gap-4 mb-4 grid-cols-2">
                    <div class="col-span-2">
                        <label asp-for="@Model.JobListing.title" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name</label>
                        <input asp-for="@Model.JobListing.title" readonly maxlength="100" type="text" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type job title" required="">
                    </div>

                    <div class="col-span-2 hidden">
                        <label asp-for="@Model.JobListing.positionId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name</label>
                        <input asp-for="@Model.JobListing.positionId" readonly maxlength="100" type="text" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type job title" required="">
                    </div>



                    <div class="col-span-2">
                        <div class="flex items-center justify-between w-full border-t md:py-2 rounded-t dark:border-gray-600">
                            <h3 class="justify-center items-center text-lg text-center font-semibold text-gray-900 dark:text-white">
                                Applicant information
                            </h3>
                        </div>
                    </div>

                    <div class="col-span-1 hidden">
                        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">First name</label>
                        <input asp-for="@Model.JASUser.Id" readonly type="text" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type first name" required="">
                    </div>

                    <div class="col-span-1">
                        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">First name</label>
                        <input asp-for="@Model.JASUser.firstName" readonly type="text" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type first name" required="">
                    </div>
                    <div class="col-span-1">
                        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Last name</label>
                        <input asp-for="@Model.JASUser.lastName" readonly  type="text" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type last name" required="">
                    </div>

                    <div class="col-span-1">
                        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Phone number</label>
                        <input asp-for="@Model.JASUser.PhoneNumber" readonly type="text" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type phone number" required="">
                    </div>

                    <div class="col-span-1">
                        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email</label>
                        <input asp-for="@Model.JASUser.Email" readonly type="text" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type email" required="">
                    </div>

                    <div class="col-span-2">
                        <div class="flex items-center justify-between w-full border-t md:py-2 rounded-t dark:border-gray-600">
                            <h3 class="justify-center items-center text-lg text-center font-semibold text-gray-900 dark:text-white">
                                Choose your Curriculum Vitae
                            </h3>
                        </div>
                    </div>

                    <div class="col-span-2">
                        <label for="countries" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Select an option</label>
                        <select id="countries" asp-for="@Model.CV.cvId" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                            <option value="" selected disabled>Choose a Curriculum Vitae</option>
                            @{
                                List<CV> cvList = ViewBag.CVs;
                                foreach (var cv in cvList)
                                {
                                    <option value="@cv.cvId">@cv.name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-span-2">
                        <div class="flex items-center justify-between w-full border-t md:py-2 rounded-t dark:border-gray-600">
                            <h3 class="justify-center items-center text-lg text-center font-semibold text-gray-900 dark:text-white">
                                Upload your Cover Letter
                            </h3>
                        </div>
                    </div>
                    <div class="col-span-2">
                        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="file_input">Upload file</label>
                        <input asp-for="@Model.CoverLetter.filePath" required name="filePath" class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-500 dark:placeholder-gray-400" aria-describedby="file_input_help" id="file_input" type="file">
                        <p class="mt-1 text-sm text-gray-500 dark:text-gray-300" id="file_input_help">PDF only.</p>
                    </div>

                </div>
                <button type="submit" class="w-full transition ease-in-out delay-150 hover:translate-y-1 hover:scale-105 duration-200
                            bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300
                            dark:focus:ring-purple-800 shadow-lg shadow-purple-500/50 dark:shadow-lg dark:shadow-purple-800/80
                            font-medium rounded-lg text-sm px-5 py-2.5 text-center text-white dark:text-darktextcolor">
                    <i class="fa-solid fa-plus mr-2"></i>Send your application
                </button>
            </form>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/datepicker.min.js"></script>