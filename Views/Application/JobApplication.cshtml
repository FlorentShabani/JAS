@{
    ViewData["Title"] = "Job Application";
}

<!DOCTYPE html>
<html lang="en">
<body class="bg-background text-textcolor dark:bg-darkbackground dark:text-darktextcolor">
    <div class="container mx-auto p-4 flex flex-col items-center">
        <h2 class="text-2xl font-semibold mb-4 dark:text-white">Job Application</h2>
    <form class="bg-gray-200 dark:bg-gray-700 p-6 rounded">
            <div class="mb-4">
                <label for="fullName" class="block font-medium dark:text-white mb-2">Full Name:</label>
                <input type="text" id="fullName" name="fullName" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500 text-black" required />
            </div>
            <div class="mb-4">
                <label for="email" class="block font-medium dark:text-white mb-2">Email:</label>
                <input type="email" id="email" name="email" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500 text-black" required />
            </div>
            <div class="mb-4 dark:text-white">
                <label for="resume" class="block font-medium mb-2">Resume (PDF):</label>
                <input type="file" id="resume" name="resume" accept=".pdf" class="w-full px-4 py-2 border dark:border-darktextcolor rounded focus:outline-none focus:border-blue-500" required />
                <div class="flex justify-center items-center mt-2">
                    <button type="submit" class="bg-primary text-white px-4 py-2 rounded hover:bg-blue-700 dark:bg-darkprimary dark:hover:bg-darkaccent dark:focus:ring-darkaccent">Submit Application</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
