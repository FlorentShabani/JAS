@{
    ViewData["Title"] = "Register";
}

<div class="container mx-auto p-4">
    <h2 class="text-2xl font-semibold mb-4">Register</h2>
    <form class="bg-gray-200 p-6 rounded">
        <div class="mb-4">
            <label for="email" class="block text-gray-700 font-medium mb-2">Email:</label>
            <input type="email" id="email" name="email" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500" required />
        </div>
        <div class="mb-4">
            <label for="password" class="block text-gray-700 font-medium mb-2">Password:</label>
            <input type="password" id="password" name="password" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500" required />
        </div>
        <div class="mb-4">
            <label for="confirmPassword" class="block text-gray-700 font-medium mb-2">Confirm Password:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500" required />
        </div>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">Register</button>
    </form>
</div>
