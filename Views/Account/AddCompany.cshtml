@using Microsoft.AspNetCore.Identity;
@model JAS.Models.Domain.Company;
@{
    ViewData["Title"] = "View Role";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="flex items-center justify-center h-screen">
    <div class="mx-auto my-auto p-4 w-full max-w-2xl h-screen md:h-auto">
        <div class="p-4 bg-white rounded-lg shadow dark:bg-gray-800 border-2 border-purple-500 dark:border-purple-800 sm:p-5">
            <div class="justify-center items-center pb-4 mb-4 rounded-t border-b sm:mb-5 dark:border-gray-600">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white text-center">
                    Create Company
                </h3>
            </div>

            <form asp-action="AddCompanyOnPost">
                <div class="grid gap-4 mb-4 sm:grid-cols-2">
                    <div class="col-span-2">
                        <label asp-for="companyId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">User Id</label>
                        <input asp-for="companyId" type="text" readonly class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type product name" required="">
                    </div>

                    <div class="col-span-2">
                        <label asp-for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name</label>
                        <input asp-for="name" type="text" require class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Type product name" required="">
                    </div>

                    <div class="sm:col-span-2">
                        <label asp-for="description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Description</label>
                        <textarea asp-for="description" id="description" rows="5" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Write a description...">Standard glass, 3.8GHz 8-core 10th-generation Intel Core i7 processor, Turbo Boost up to 5.0GHz, 16GB 2666MHz DDR4 memory, Radeon Pro 5500 XT with 8GB of GDDR6 memory, 256GB SSD storage, Gigabit Ethernet, Magic Mouse 2, Magic Keyboard - US</textarea>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <button type="submit" class="w-full transition ease-in-out delay-150 hover:translate-y-1 hover:scale-105 duration-200
                            bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300
                            dark:focus:ring-purple-800 shadow-lg shadow-purple-500/50 dark:shadow-lg dark:shadow-purple-800/80
                            font-medium rounded-lg text-sm px-5 py-2.5 text-center text-white dark:text-darktextcolor">
                        <i class="fa-solid fa-arrows-rotate mr-2"></i>Update role
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>