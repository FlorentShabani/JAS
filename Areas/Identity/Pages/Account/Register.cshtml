@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var sectionToScroll = document.getElementById("registerSec");

        if (sectionToScroll) {
            sectionToScroll.scrollIntoView({ behavior: "smooth" });
        }
    });
</script>

<section id="registerSec">
    <div class="flex flex-col mx-auto flex items-center justify-center px-6 py-8 md:inset-0 md:h-screen lg:py-0">
        <div class="bg-backgroundc-100 w-full border-2 border-purple-500 shadow-lg shadow-purple-500/50 hover:shadow-xl hover:shadow-purple-500/50 dark:hover:shadow-xl dark:shadow-purple-800/80 dark:hover:shadow-purple-800/80 rounded-lg shadow px-5 dark:border-2 dark:border-purple-500 md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
            <div class="space-y-3 md:space-y-6 sm:p-8">
                <div class="flex justify-center items-center">
                    <img class="h-14" src="~/content/logo.png">
                    <h1 class="text-xl text-center font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                        Create an account
                    </h1>
                </div>
                <hr class="my-5 sm:mx-auto border-primary dark:border-darkprimary" />
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-4 md:space-y-5 p-1">
                    <div class="flex flex-row gap-4">
                        <div class="relative w-1/2">
                            <input asp-for="Input.firstName" type="text" id="floating_filled" class="block rounded-t-lg px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-purple-500 focus:outline-none focus:ring-0 focus:border-purple-600 peer" placeholder=" " />
                            <label asp-for="Input.firstName" class="absolute text-sm text-textcolor dark:text-darktextcolor duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-purple-600 peer-focus:dark:text-purple-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">First name</label>
                            <span asp-validation-for="Input.firstName" class="text-sm text-red-500"></span>
                        </div>
                        <div class="relative w-1/2">
                            <input asp-for="Input.lastName" type="text" id="floating_filled" class="block rounded-t-lg px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-purple-500 focus:outline-none focus:ring-0 focus:border-purple-600 peer" placeholder=" " />
                            <label asp-for="Input.lastName" class="absolute text-sm text-textcolor dark:text-darktextcolor duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-purple-600 peer-focus:dark:text-purple-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Last name</label>
                            <span asp-validation-for="Input.lastName" class="text-sm text-red-500"></span>
                        </div>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
                    <div class="relative">
                        <input asp-for="Input.Email" type="text" id="floating_filled" class="block rounded-t-lg px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-purple-500 focus:outline-none focus:ring-0 focus:border-purple-600 peer" placeholder=" " />
                        <label asp-for="Input.Email" class="absolute text-sm text-textcolor dark:text-darktextcolor duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-purple-600 peer-focus:dark:text-purple-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Email</label>
                        <span asp-validation-for="Input.Email" class="text-sm text-red-500"></span>
                    </div>

                    <div class="relative">
                        <input asp-for="Input.PhoneNumber" type="text" id="floating_filled" class="block rounded-t-lg px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-purple-500 focus:outline-none focus:ring-0 focus:border-purple-600 peer" placeholder=" " />
                        <label asp-for="Input.PhoneNumber" class="absolute text-sm text-textcolor dark:text-darktextcolor duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-purple-600 peer-focus:dark:text-purple-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Phone number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-sm text-red-500"></span>
                    </div>


                    <div class="relative">
                        <input asp-for="Input.Password" type="password" id="floating_filled" class="block rounded-t-lg px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-purple-500 focus:outline-none focus:ring-0 focus:border-purple-600 peer" placeholder=" " />
                        <label asp-for="Input.Password" class="absolute text-sm text-textcolor dark:text-darktextcolor duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-purple-600 peer-focus:dark:text-purple-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Password</label>
                        <span asp-validation-for="Input.Password" class="text-sm text-red-500"></span>
                    </div>

                    <div class="relative">
                        <input asp-for="Input.ConfirmPassword" type="password" id="floating_filled" class="block rounded-t-lg px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-purple-500 focus:outline-none focus:ring-0 focus:border-purple-600 peer" placeholder=" " />
                        <label asp-for="Input.ConfirmPassword" class="absolute text-sm text-textcolor dark:text-darktextcolor duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-purple-600 peer-focus:dark:text-purple-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Confirm password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-sm text-red-500"></span>
                    </div>

                    <div class="">
                        <button id="registerSubmit" type="submit" class="w-full text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 shadow-lg shadow-purple-500/50 dark:shadow-lg dark:shadow-purple-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2"><i class="fa-solid fa-user-plus text-darktextcolor" style="margin-right: 5px;"></i>Register</button>
                    </div>
                    <p class="text-sm font-light text-textcolor dark:text-gray-400 text-center mt-4">
                        Already have an account? <a asp-area="Identity" asp-page="/Account/Login" class="font-medium text-blue-500 hover:underline dark:text-blue-500">Login here</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
